<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_weight="1.27">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logoutButton"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/searchUser"
            android:layout_alignEnd="@+id/searchUser" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_button"
            android:id="@+id/searchUser"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my friends"
            android:id="@+id/myFreiends"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notificatinos_button"
            android:id="@+id/notifications_btn"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/myFreiends"
            android:layout_toEndOf="@+id/myFreiends"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_target"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/searchUser"
            android:layout_toLeftOf="@+id/logoutButton"
            android:layout_toStartOf="@+id/logoutButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_message_btn"
            android:id="@+id/sendMessageBtn"
            android:layout_above="@+id/myFreiends"
            android:layout_alignLeft="@+id/myFreiends"
            android:layout_alignStart="@+id/myFreiends"
            android:layout_marginBottom="53dp" />
    </RelativeLayout>
</LinearLayout>
